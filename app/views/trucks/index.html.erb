<p id="notice"><%= notice %></p>

<h1>Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Truck name</th>
      <th>Truck x</th>
      <th>Truck y</th>
      <th>Truck sns</th>
      <th>Truck sns2</th>
      <th>Truck phone</th>
      <th>Truck cover</th>
      <th>Truck category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.truck_name %></td>
        <td><%= truck.truck_x %></td>
        <td><%= truck.truck_y %></td>
        <td><%= truck.truck_sns %></td>
        <td><%= truck.truck_sns2 %></td>
        <td><%= truck.truck_phone %></td>
        <td><%= truck.truck_cover %></td>
        <td><%= truck.truck_category %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

