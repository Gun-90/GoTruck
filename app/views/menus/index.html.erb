<p id="notice"><%= notice %></p>

<h1>Menus</h1>

<table>
  <thead>
    <tr>
      <th>Menu name</th>
      <th>Truck</th>
      <th>Menu price</th>
      <th>Menu image</th>
      <th>Menu category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.menu_name %></td>
        <td><%= menu.truck %></td>
        <td><%= menu.menu_price %></td>
        <td><%= menu.menu_image %></td>
        <td><%= menu.menu_category %></td>
        <td><%= link_to 'Edit', edit_truck_menu_path(@truck, menu) %></td>
        <td><%= link_to 'Destroy', truck_menu_path(@truck,menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form', menu: [@truck, @menu_new] %>